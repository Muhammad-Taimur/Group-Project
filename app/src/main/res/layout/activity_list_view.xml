<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"

        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">


        <RelativeLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:id="@+id/trip_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/ic_menu_gallery" />

            <ImageView
                android:id="@+id/starImage"
                android:layout_width="20dp"
                android:layout_alignParentRight="true"
                android:layout_height="20dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:src="@android:drawable/star_big_off" />


            <TextView
                android:maxLines="1"
                android:id="@+id/title_tv"
                android:maxLength="32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/trip_image"
                android:text="AvailableBiafjaflkajfklajfakfjakfjakfjafkajfkajfkafjkalfjalkfjaklfajflkafjklafjalkfjakfjakfajfkajklkes"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_tv"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/trip_image"
                android:text="1-May-2014"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@android:color/black" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>